<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rela_login_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dsad.diycode.LoginActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/top_login_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <at.markushi.ui.ActionView
        android:id="@+id/btn_login_back"
        app:av_action="back"
        app:av_color="@color/colorMenuBtn"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:text="登陆"
        android:textColor="@color/colorMenuBtn"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_login_bar"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/edit_login_usernameinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit_login_passwordinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_login_password"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_gravity="center"
            android:text="登陆"
            android:textSize="20sp"
            android:background="@drawable/loginbtn_shap"
            android:textColor="#fff"
            android:id="@+id/btn_login_login"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_login_register"
            android:text="还没有账号?点这里注册"
            android:textColor="#335cff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>


</RelativeLayout>
